{% extends 'base.html.twig' %}

{% block title %}GIF Countdown Generator{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8">
                {{ form_start(form) }}

                {#{{ form_widget(form) }}#}

                <div class="form-group">
                    {{ form_label(form.days) }}
                    {{ form_widget(form.days, {
                        'attr': {
                            'autocomplete': 'off',
                        }
                    }) }}

                    {{ form_label(form.hours) }}
                    {{ form_widget(form.hours, {
                        'attr': {
                            'autocomplete': 'off',
                        }
                    }) }}

                    {{ form_label(form.minutes) }}
                    {{ form_widget(form.minutes, {
                        'attr': {
                            'autocomplete': 'off',
                        }
                    }) }}

                    {{ form_label(form.seconds) }}
                    {{ form_widget(form.seconds, {
                        'attr': {
                            'autocomplete': 'off',
                        }
                    }) }}
                </div>

                {{ form_widget(form.date, { 'attr': {
                    'autocomplete': 'off',
                    'class': 'form-group'
                } }) }}

                <div class="form-group">
                    {{ form_widget(form.timezone, { 'attr': {
                        'autocomplete': 'off',
                        'class': 'form-control'
                    } }) }}
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Go</button>
                </div>

                {% if embed_code %}
                    <div class="form-group">
                        <textarea class="form-control" rows="10" cols="50">{{ embed_code }}</textarea>
                    </div>
                {% endif %}

                <div class="form-group">
                    {{ embed_code | raw }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
  </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}